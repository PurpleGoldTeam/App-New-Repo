<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Sex</th>
      <th>Email</th>
      
      
      <tbody>
        <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.id %></td>
          <td><%= link_to profile.name, ('/profiles/' + profile.id.to_s) %></td>
          <td><%= profile.bio %></td>
          <td><%= profile.sex %></td>
          <td><%= Profile.show_email?(current_user, profile) %></td>
          <td><%= button_to Profile.liked?(current_user, profile), ('/add_like/current_user=' + current_user.profile_id.to_s + 'other_profile=' + profile.id.to_s), method: :post %></td>
        </tr>
      <% end %>
    </tbody>
      
      
      <th colspan="3"></th>
    </tr>
  </thead>


</table>

<br>


