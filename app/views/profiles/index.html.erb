<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Bio</th>
      <th>Race</th>
      <th>Sex</th>
      
      
      <tbody>
        <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.id %></td>
          <td><%= profile.name %></td>
          <td><%= profile.bio %></td>
          <td><%= profile.sex %></td>
          <td><%= Profile.show_email?(current_user, profile) %></td>
        </tr>
      <% end %>
    </tbody>
      
      
      <th colspan="3"></th>
    </tr>
  </thead>


</table>

<br>


