<h1>Sign up</h1>

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style>
.w3-btn {width:150px;}
</style>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.label :gender, "My gender is"  %>
      
      <%= f.radio_button :sex, "Male", :id=>"Gender_Male", :style=>"display:none;" %>
      <label for="Male" class="btn btn-primary w3-button w3-round-xxlarge btnPadding">Male</label>
      
      <%= f.radio_button :sex, "Female", :id=>"Gender_Female", :style=>"display:none;" %>
      <label for="Female" class="btn btn-primary w3-button w3-round-xxlarge btnPadding">Female</label>
    
      <%= f.radio_button :sex, "Other", :id=>"Gender_Other", :style=>"display:none;" %>
      <label for="Other" class="btn btn-primary w3-button w3-round-xxlarge btnPadding">Other</label>
      
      <%= f.label :gender, "I am interested in"  %>
      
      <%= f.radio_button :sex, "Male", :id=>"Intrested_Male", :style=>"display:none;" %>
      <label for="Male" class="btn btn-primary w3-button w3-round-xxlarge btnPadding">Male</label>
      
      <%= f.radio_button :sex, "Female", :id=>"Intrested_Female", :style=>"display:none;" %>
      <label for="Female" class="btn btn-primary w3-button w3-round-xxlarge btnPadding">Female</label>
    
      <%= f.radio_button :sex, "Other", :id=>"Intrested_Other", :style=>"display:none;" %>
      <label for="Other" class="btn btn-primary w3-button w3-round-xxlarge btnPadding">Other</label>
      
      <%= f.submit "Create my account", class: "btn btn-primary w3-button w3-round-xxlarge btnPadding" %>
    <% end %>
  </div>
</div>


